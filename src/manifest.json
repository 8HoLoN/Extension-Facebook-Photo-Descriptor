{
  "name": "Facebook Photo Descriptor",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Display Facebook photo description for all languages",
  "permissions": [
    "http://www.facebook.com/*", "https://www.facebook.com/*"
  ],
  "icons": {
    "128": "logo128.png",
    "16": "logo16.png",
    "48": "logo48.png"
  },
  "content_scripts": [
    {
      "matches": ["http://www.facebook.com/*", "https://www.facebook.com/*"],
      "js" : ["facebookphotodescriptor.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ]
}